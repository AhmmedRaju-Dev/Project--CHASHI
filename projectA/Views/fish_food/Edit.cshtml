@model projectA.fish_food

@{
    ViewBag.Title = "Edit Fish Food";
    Layout = "~/Views/Shared/Admin/adminlayout.cshtml";
}

<h2 style="text-align:center">@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.fish_food_id)
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.pond_id, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })

            <div class="col-md-6 col-sm-6 col-xs-12">

                @Html.DropDownListFor(model => model.pond_id, ViewBag.pondlist as SelectList, "Select Pond", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.pond_id, null, new { @class = "text-danger" })
                <div class="text-danger text-capitalize-">@Html.ViewBag.error</div>
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.food_id, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.DropDownListFor(model => model.food_id, ViewBag.foodlist as SelectList, "Select Food", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.food_id, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.food_price, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.food_price, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.food_price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.food_quantity, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.food_quantity, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.food_quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.food_company_name, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.food_company_name, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.food_company_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12 datepicker", data_date_format = "mm/dd/yyyy", placeholder = "mm/dd/yy" } })
                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <button class="btn btn-primary" type="button"><a href="@Url.Action("index","fish_food")" style="color:white">Cancel</a></button>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $('.datepicker').datepicker(); //Initialise any date pickers
    </script>
}